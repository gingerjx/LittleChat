<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ChooseFileController">
   <children>
      <TreeView fx:id="filesTree"/>
      <Button mnemonicParsing="false" onMouseClicked="#handleSendFile" text="Send" ></Button>
      <Label fx:id="infoLabel" text="Select file to send"></Label>
   </children>
</VBox>
